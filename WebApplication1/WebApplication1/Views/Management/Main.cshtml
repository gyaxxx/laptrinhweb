<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/datatables.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
</head>

<style>
    .left-main p {
        font-size: 25px;
        color: white;
        border-bottom: 1px solid white;
        border-radius: 5px
    }

    .left-main img {
        margin-top: 30px;
        margin-left: 55px;
    }

    .left-main ul {
        list-style: none;
        color: white;
        font-size: 20px;
    }

    .left-main li a {
        text-decoration: none;
        color: white;
    }

    .left-main li:not(:last-child) {
        margin-bottom: 10px;
    }

    .left-main h5 {
        color: white;
        font-size: 30px;
        margin-top: 50px;
        padding: 10px;
    }

</style>

<body>
    <header>
        <div class="d-flex p-2 bg-light justify-content-between">
            <h2 class="ml-5">Moonlight Hotel</h2>
            <a class="mr-5 mt-2"><i class="fa-solid fa-bars"></i></a>
        </div>
    </header>

    <main class="row">
        <div class="left-main col-2 bg-info container">
            <img src="~/img/userPic.png">
            <p class="mt-2 text-center">@ViewBag.Username</p>
            <div>
                <h5>Statistics</h5>
                <ul>
                    <li class="d-flex align-items-center">
                        <a href="javascript:void(0)" onclick="loadContent('Staff', 'Management')">Home&emsp;&emsp;&emsp;&emsp;<i class="fa-solid fa-house"></i></a>
                    </li>
                    <li>
                        <a href="javascript:void(0)" onclick="loadContent('Room', 'Management')">Rooms&emsp;&emsp;&emsp;&ensp;<i class="fa-solid fa-bed"></i></a>
                        
                     </li>
                    <li>
                        <a href="javascript:void(0)" onclick="loadContent('Reservation', 'Management')">Reservation &emsp;<i class="fa-solid fa-receipt"></i></a>
                        
                     </li>
                    <li>
                        <a href="javascript:void(0)" onclick="loadContent('GuestList', 'Management')">Guests &emsp;&emsp;&emsp;&nbsp;<i class="fa-regular fa-user"></i></a>
                        
                    </li>
                    @if(ViewBag.Role == "Manager")
                    {
                        <li>
                            <a href="javascript:void(0)" onclick="loadContent('StaffList', 'Management')">Staffs &emsp;&emsp;&emsp;&ensp;&ensp;<i class="fa-solid fa-user-tie"></i></a>
                        </li>
                    }
                    <li>
                        <a asp-action="LogOut" asp-controller="Management" class="btn btn-danger text-white mt-5">Log out</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-10" id="content-placeholder">
            @RenderBody()
        </div>
    </main>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="~/js/datatables.min.js"></script>
    <script src="~/js/scripts.js"></script>
    @RenderSection("Scripts", required:false)
</body>
</html>

    <script>
        function loadContent(action, controller)
        {
            $('#content-placeholder').empty();

            $.get('/Management/' + action, function (data) {
                $('#content-placeholder').html(data);
            });
        }
    </script>